{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "StackExchange.Redis": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ApiVersion": "Version 3.2.1",
  "ConnectionStrings": {
    "DefaultConnection": "TeamMemoryDb"
  },
  "Kestrel": {
    "EndPoints": {
      "Https": {
        "Url": "https://localhost:8181",
        "SslProtocols": [
          "Tls12",
          "Tls13"
        ],
        "ClientCertificateMode": "RequireCertificate",
        "Certificate": {
          "File": "/etc/ssl/infra-certificates/backend.pfx",
          "CertPassword": "${KESTREL_PASSWORD}",
          "CAFile": "/etc/ssl/infra-certificates/vault-ca.crt"
        }
      }
    }
  },
  "JwtSettings": {
    "Issuer": "https://keycloak:8080/realms/TeamMemory",
    "Audience": "https://localhost:8181"
  },
  "HangfireCredentials": {
    "UserName": "admin",
    "HANGFIRE_PASSWORD": "${HANGFIRE_PASSWORD}"
  },
  "Jaeger": {
    "IpAddress": "172.26.0.9",
    "Port": 6831
  },
  "HashiCorp": {
    "AppRole": {
      "RoleId": "529ff42a-beb9-ca08-5a57-471cd16eddf6",
      "SecretId": "98e1f5a6-b760-4821-e30b-a897873c43ce"
    },
    "HttpClient": {
      "VaultAddress": "https://172.26.0.6:8200",
      "Timeout": "00:02:30"
    },
    "JwtPublicKeyPath": "secret/auth-service",
    "CertPath": "secret/cert",
    "RabbitMqPath": "secret/rabbit-connection"
  },
  "FeatureFlags": {
    "EnableNewFeature": true,
    "EnableBetaFeature": false
  },
  "CacheSettings": {
    "CacheType": "Redis",
    "Redis": {
      "ConnectionString": "172.29.0.2:6379",
      "ConfigurationOptions": {
        "AllowAdmin": true,
        "ConnectTimeout": 5000,
        "SyncTimeout": 5000,
        "AbortOnConnectFail": false,
        "Ssl": true,
        "SslHost": "redis",
        "Certificate": {
          "File-pfx": "/etc/ssl/infra-certificates/backend.pfx",
          "REDISCLI_AUTH": "${REDISCLI_AUTH}"
        }
      }
    }
  },
  "ExternalsApi": {
    "Employee": {
      "Url": "https://api.jsonbin.io/v3/qs/689a386b43b1c97be91bf2b9",
      "Headers": {
        "X-Access-Key": "${EXTERNAL_API_KEY}",
        "Content-Type": "application/json"
      },
      "Timeout": "00:03:00"
    },
    "Project": {
      "Url": "https://api.jsonbin.io/v3/qs/689bb93f43b1c97be91cc85f",
      "Headers": {
        "X-Access-Key": "${EXTERNAL_API_KEY}",
        "Content-Type": "application/json"
      },
      "Timeout": "00:03:00"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Graylog"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Graylog",
        "Args": {
          "HostnameOrAddress": "localhost",
          "Port": 12201,
          "Facility": "Teams.API",
          "TransportType": "Udp"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName",
      "WithThreadId",
      "WithProcessId",
      "WithCorrelationId"
    ],
    "Properties": {
      "Application": "Teams.API",
      "Environment": "Development"
    }
  }
}